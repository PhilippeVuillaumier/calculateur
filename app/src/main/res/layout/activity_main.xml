<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:columnCount="4"
    android:background="#f7c6aa"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvEcran"
        style="@style/ecran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:width="350dp"
        android:height="80dp"
        android:gravity="end"
        android:layout_margin="5dp"
        android:text="0" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/rbEuro"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="convEuros"
            android:background="@drawable/radiobuttrond"
            android:text="€" />

            <RadioButton
                android:id="@+id/rbDollard"
                android:layout_width="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$"
                android:background="@drawable/radiobuttrond"
                android:onClick="convDollars"/>

            <RadioButton
                android:id="@+id/rbLivre"
                android:layout_width="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radiobuttrond"
                android:text="£"
                android:onClick="convLivres"/>

            <RadioButton
                android:id="@+id/rbBitcoin"
                android:layout_width="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/radiobuttrond"
                android:layout_weight="1"
                android:text="B"
                android:onClick="convBitcoin"/>
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbDegre"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="deg"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/radiobuttrond"
            android:onClick="convDegre"/>

        <RadioButton
            android:id="@+id/rbRadian"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="rad"
            android:cursorVisible="true"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/radiobuttrond"
            android:onClick="convRad"/>

        <RadioButton
            android:id="@+id/rbGrade"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/radiobuttrond"
            android:text="grd"
            android:onClick="convGrade"/>
    </RadioGroup>

    <Button
        android:id="@+id/buEffacer"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:gravity="center"
        android:background="@drawable/gros_button"
        android:layout_gravity="center"
        android:text="@string/effacer"
        android:textSize="25sp"
        android:onClick="Effacer"
        />

    <Button
        style="@style/button"
        android:id="@+id/buSept"
        android:layout_row="4"
        android:layout_column="0"
        android:text="7"
        android:onClick="Touche"/>/>

    <Button
        style="@style/button"
        android:id="@+id/buHuit"
        android:layout_row="4"
        android:layout_column="1"
        android:text="8"
        android:onClick="Touche"/>/>

    <Button
        style="@style/button"
        android:id="@+id/buNeuf"
        android:layout_row="4"
        android:layout_column="2"
        android:text="9"
        android:onClick="Touche"/>/>

    <Button
        style="@style/button_sombre"
        android:id="@+id/buMultiplie"
        android:layout_row="4"
        android:layout_column="3"
        android:text="*"
        android:onClick="Touche"/>/>

    <Button
        style="@style/button"
        android:id="@+id/buQuatre"
        android:layout_row="5"
        android:layout_column="0"
        android:text="4"
        android:onClick="Touche"/>/>

    <Button
        style="@style/button"
        android:id="@+id/buCinq"
        android:layout_row="5"
        android:layout_column="1"
        android:text="5"
        android:onClick="Touche"/>/>

    <Button
        style="@style/button"
        android:id="@+id/buSix"
        android:layout_row="5"
        android:layout_column="2"
        android:text="6"
        android:onClick="Touche"/>/>

    <Button
        style="@style/button_sombre"
        android:id="@+id/buMoins"
        android:layout_row="5"
        android:layout_column="3"
        android:text="-"
        android:onClick="Touche"/>/>

    <Button
        style="@style/button"
        android:id="@+id/buUn"
        android:layout_row="6"
        android:layout_column="0"
        android:text="1"
        android:onClick="Touche"/>/>

    <Button
        style="@style/button"
        android:id="@+id/buDeux"
        android:layout_row="6"
        android:layout_column="1"
        android:text="2"
        android:onClick="Touche"/>/>

    <Button
        style="@style/button"
        android:id="@+id/buTrois"
        android:layout_row="6"
        android:layout_column="2"
        android:text="3"
        android:onClick="Touche"/>/>

    <Button
        style="@style/button_sombre"
        android:id="@+id/buPlus"
        android:layout_row="6"
        android:layout_column="3"
        android:text="+"
        android:onClick="Touche"/>/>

    <Button
        style="@style/button"
        android:id="@+id/buZero"
        android:layout_row="7"
        android:layout_column="0"
        android:text="0"
        android:onClick="Touche"/>/>

    <Button
        style="@style/button"
        android:id="@+id/button17"
        android:layout_row="7"
        android:layout_column="1"
        android:text="."
        android:onClick="Touche"/>/>

    <Button
        android:id="@+id/buResultat"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_row="7"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:gravity="center"
        android:background="@drawable/gros_button"
        android:text="@string/resultat"
        android:layout_gravity="top"
        android:textSize="25sp"
        android:onClick="resultat"/>

    <Button
        style="@style/button_sombre"
        android:id="@+id/buDivise"
        android:layout_row="3"
        android:layout_column="3"
        android:text="/"
        android:onClick="Touche"/>


</GridLayout>